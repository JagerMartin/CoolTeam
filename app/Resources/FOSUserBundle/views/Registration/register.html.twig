{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/main.css') }}" rel="stylesheet">
{% endblock %}

{% block title %}{{ parent() }} - S'inscrire{% endblock %}

{% block body %}
<body id="contactfond">
<!-- Bouton qui permet de remonter en haut de page -->
<div class="fixed-action-btn smooth-scroll" style="bottom: 45px; right: 24px;">
    <a href="#top-section" class="btn-floating btn-large teal darken-3 waves-effect waves-light">
        <i class="fa fa-arrow-up"></i>
    </a>
</div>

<div class="menu2">
    <ul>
        <a href="{{ path('home') }}" style="font-family: Titillium Web; font-weight: 700;font-size: 13px;" class="btn btn-default teal lighten-3 menuB textCourt"><li>ACCUEIL</li></a>
        <a href="{{ path('association') }}" style="font-family: Titillium Web; font-weight: 700;font-size: 13px;" class="btn btn-default teal lighten-2 menuB textCourt" ><li>L' ASSOCIATION</li></a>
        <a href="{{ path('modeemploi') }}" style="font-family: Titillium Web; font-weight: 700;font-size: 13px;" class="btn btn-default teal menuB textlong"><li>COMMENT CA <br>MARCHE ?</li></a>
        <a href="{{ path('app_search') }}" style="font-family: Titillium Web; font-weight: 700;font-size: 13px;" class="btn btn-default teal darken-1 menuB textcourt"><li>RECHERCHER</li></a>
        <a href="{{ path('apprendreObserver') }}" style="font-family: Titillium Web; font-weight: 700;font-size: 13px;" class="btn btn-default teal darken-3 menuB textlong"><li>APPRENDRE <br>A OBSERVER</li></a>
        <a href="{{ path('contact') }}" style="font-family: Titillium Web; font-weight: 700;font-size: 13px;" class="btn btn-default teal darken-4 menuB textcourt"><li>CONTACT</li></a>
    </ul>
</div>
<!-- Modal Login -->
{% if not is_granted("IS_AUTHENTICATED_FULLY") %}
    <!--Modal: Login Form-->
    <div class="modal fade" id="modalLogin" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog cascading-modal" role="document">
            <!--Content-->
            <div class="modal-content teal darken-3" >
                <!--Header-->
                <div class="modal-header white-text">
                    <h4 class="title"><button type="button" class="close waves-effect waves-light white-text" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true" class="white-text">&times;</span>
                        </button>
                        Se connecter</h4>
                </div>

                <!--Body-->
                <div class="modal-body">
                    {{ render(controller('FOSUserBundle:Security:login')) }}
                </div>

                <!--Footer-->
                <div class="modal-footer">
                    <div class="options text-md-center mt-1  white-text" style="width: 100%">
                        <p><a href="{{ path('fos_user_registration_register') }}">Pas encore membre? S'enregistrer</a></p>
                        <p>Vous avez oubliez votre <a href="{{ path('fos_user_change_password') }}">Mot de passe?</a></p>
                    </div>

                </div>
            </div>
            <!-- End Content -->
        </div>
    </div>
    <!--Modal: Login Form-->
{% endif %}
<!-- ./END Modal Login -->
<div class="container container-fluid contactgeneral" id="top-section" style="position: relative;margin-bottom: 0%">
    {{ include("header.html.twig") }}
    <div class="container contGen">
        <!-- image du piou -->
        <img src="{{ asset('img/contact/contbird.png') }}" class="contactBirdImg">
        <div class="row">
            <!-- MENU Général gauche-->
            <div class="col-lg-2 col-xl-2 hidden-sm-down hidden-md-down" style="margin: 0;padding: 0;">
                {{ include('menu.html.twig') }}
            </div>
            <!-- Bloc texte à côté du menu principal-->
            <div class="col-xl-10 col-lg-10 col-md-12 col-sm-12" style="margin: 0;">
                <div class="row">
                    <div class="row">
                        <div class="col-xl-4 offset-xl-1 col-lg-4 offset-lg-1 col-md-12 col-sm-12 text-center z-depth-2 cadreInfoInscription1">
                            Vous souhaitez contribuer au programme de recherche ?
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-4 offset-xl-1 col-lg-4 offset-lg-1 col-md-12 col-sm-12 text-center z-depth-2 cadreInfoInscription2">
                            Vous voulez partager votre passion avec d'autres personnes ?
                        </div>
                    </div>
                    <!-- Bloc Texte -->
                    <div class="col-xl-8 col-lg-8 col-md-12 col-sm-12 blocText">
                        <!-- Titre du cadre -->
                        <div class="col-xl-4 offset-xl-4 col-lg-3 offset-lg-5 col-md-4 col-sm-3 text-center z-depth-2 titreCadre" >S'INSCRIRE !</div>

                        {% for message in app.session.flashbag.get('info') %}
                            <div class="alert alert-info"><span class="glyphicon glyphicon-info-sign"></span> {{ message }}</div>
                        {% endfor %}

                        <div class="row">
                            <div class="col s12 m8 offset-m2">
                                {% block fos_user_content %}
                                    {% include "@FOSUser/Registration/register_content.html.twig" %}
                                {% endblock fos_user_content %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    {% block footer %}
        {{ include('footer.html.twig') }}
    {% endblock %}
{% endblock %}

