{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} - Contact{% endblock %}


{% block body %}
 {% block container %}
<hr class="uk-grid-divider">
<div class="uk-grid" data-uk-grid-margin>

    <div class="uk-width-medium-2-3">
        <div class="uk-panel uk-panel-header">

            <h3 class="uk-panel-title">Nous contacter</h3>

            <form class="uk-form uk-form-stacked">

                <div class="uk-form-row">
                    <label class="uk-form-label">Votre Nom</label>
                    <div class="uk-form-controls">
                        <input type="text" placeholder="" class="uk-width-1-1">
                    </div>
                </div>

                <div class="uk-form-row">
                    <label class="uk-form-label">Votre Email</label>
                    <div class="uk-form-controls">
                        <input type="text" placeholder="" class="uk-width-1-1">
                    </div>
                </div>

                <div class="uk-form-row">
                    <label class="uk-form-label">Votre Message</label>
                    <div class="uk-form-controls">
                        <textarea class="uk-width-1-1" id="form-h-t" cols="100" rows="9"></textarea>
                    </div>
                </div>

                <div class="uk-form-row">
                    <div class="uk-form-controls">
                        <button class="uk-button uk-button-primary">Envoyer</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="uk-width-medium-1-3">
        <div class="uk-panel uk-panel-box uk-panel-box-secondary">
            <h3 class="uk-panel-title">Nos coordonnées</h3>
            <p>
                <strong>Nos Amis les oiseaux</strong>
                <br>Street, Country
                <br>Postal Zip Code
            </p>
            <p>
                <a>contact@noa.com</a>
                <br><a>@NotreTwitterCompte</a><br>
                Tél : 00.00.00.00.00
            </p>
            <h3 class="uk-h4">Suivez nous</h3>
            <p>
                <a href="#" class="uk-icon-button uk-icon-github"></a>
                <a href="#" class="uk-icon-button uk-icon-twitter"></a>
                <a href="#" class="uk-icon-button uk-icon-dribbble"></a>
                <a href="#" class="uk-icon-button uk-icon-html5"></a>
            </p>
        </div>
    </div>
</div>

</div>
{% endblock %}
{% endblock %}