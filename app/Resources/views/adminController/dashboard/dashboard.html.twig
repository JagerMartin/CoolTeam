{% extends ':adminController/dashboard:dashboardbase.html.twig'%}
{% block title %}Panels - {{ parent() }}{% endblock %}
{% block body %}
        {% block container %}
        <!-- Vue Panel Dashboard -->
        <div class="container-fluid" id="panelDashboard" >
            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header" style="font-size: 25px;font-weight: 600;color: #ffffff;text-transform: uppercase">
                        <i class="fa fa-dashboard"></i> Tableau de bord
                    </h1>
                </div>
            </div>
            <!-- /.row les 3 premiers Panels-->
            {% if is_granted('ROLE_SUPER_ADMIN') or is_granted('ROLE_NATURALIST') or is_granted('ROLE_OBSERVER')%}
                <div class="row">
                    <!-- Déposer une observation-->
                    <div class="col-lg-4 col-md-6">
                        <div class="panel panel-green">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-xs-3">
                                        <i class="fa fa-plus fa-5x"></i>
                                    </div>
                                    <div class="col-xs-9 text-right">
                                        <div class="huge">Déposer une observation</div>
                                    </div>
                                </div>
                            </div>
                            <a href="{{ path('app_search') }}">
                                <div class="panel-footer">
                                    <span class="pull-left">Voir</span>
                                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                    <div class="clearfix"></div>
                                </div>
                            </a>
                        </div>
                    </div>
                    <!-- Nouvelles observations-->
                    <div class="col-lg-4 col-md-6">
                        <div class="panel panel-green-clair">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-xs-3">
                                        <i class="fa fa-binoculars fa-5x"></i>
                                    </div>
                                    <div class="col-xs-9 text-right">
                                        <div class="huge" style="color: #004d40">6</div>
                                        <div style="font-size: 20px;font-weight: 600">Nouvelles observations</div>
                                    </div>
                                </div>
                            </div>
                            <a href="{{ path('app_observations_new') }}">
                                <div class="panel-footer">
                                    <span class="pull-left" style="color: #2b2b2b">Voir</span>
                                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                    <div class="clearfix"></div>
                                </div>
                            </a>
                        </div>
                    </div>
                    <!-- Mes observations-->
                    <div class="col-lg-4 col-md-6">
                        <div class="panel panel-green">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-xs-3">
                                        <i class="fa fa-eye fa-5x"></i>
                                    </div>
                                    <div class="col-xs-9 text-right">
                                        <div class="huge">Mes observations</div>
                                    </div>
                                </div>
                            </div>
                            <a href="{{ path('app_observations', {'page': 'x'}) }}">
                                <div class="panel-footer">
                                    <span class="pull-left">Plus de détails</span>
                                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                    <div class="clearfix"></div>
                                </div>
                            </a>
                        </div>
                    </div>
                    <!-- Mes observations en attente-->
                    <div class="col-lg-4 col-md-6">
                        <div class="panel panel-green">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-xs-3">
                                        <i class="fa fa-eye fa-5x"></i>
                                    </div>
                                    <div class="col-xs-9 text-right">
                                        <div class="huge">Mes observations en attente</div>
                                    </div>
                                </div>
                            </div>
                            <a href="{{ path('app_observations_pending') }}">
                                <div class="panel-footer">
                                    <span class="pull-left">Plus de détails</span>
                                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                    <div class="clearfix"></div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            {% endif %}
            <!-- /.row  les 3 derniers Panels-->
            <div class="row">
                {% if is_granted('ROLE_SUPER_ADMIN') or is_granted('ROLE_NATURALIST')%}
                    <!-- Mes validations -->
                    <div class="col-lg-4 col-md-6">
                        <div class="panel panel-green-clair">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-xs-3">
                                        <i class="fa fa-check-circle fa-5x"></i>
                                    </div>
                                    <div class="col-xs-9 text-right">
                                        <div class="huge" style="font-size: 20px;font-weight: 600">Mes validations</div>
                                    </div>
                                </div>
                            </div>
                            <a href="{{ path('app_observations_validate') }}">
                                <div class="panel-footer">
                                    <span class="pull-left">Voir</span>
                                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                    <div class="clearfix"></div>
                                </div>
                            </a>
                        </div>
                    </div>
                {% endif %}
                {% if is_granted('ROLE_SUPER_ADMIN') or is_granted('ROLE_ADMINISTRATIF')%}
                    <!-- Gestions des utilisateurs -->
                    <div class="col-lg-4 col-md-6">
                        <div class="panel panel-green">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-xs-3">
                                        <i class="fa fa-group fa-5x"></i>
                                    </div>
                                    <div class="col-xs-9 text-right">
                                        <div class="huge">Gestions des utilisateurs</div>
                                    </div>
                                </div>
                            </div>
                            <a href="{{ path('admin_user_list') }}">
                                <div class="panel-footer">
                                    <span class="pull-left">Voir</span>
                                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                    <div class="clearfix"></div>
                                </div>
                            </a>
                        </div>
                    </div>
                    <!-- Mise à jour de la base Taxref -->
                    <div class="col-lg-4 col-md-6">
                        <div class="panel panel-green-clair">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-xs-3">
                                        <i class="fa fa-refresh fa-5x"></i>
                                    </div>
                                    <div class="col-xs-9 text-right">
                                        <div class="huge" style="font-size: 20px;font-weight: 600">Mise à jour de la base Taxref</div>
                                    </div>
                                </div>
                            </div>
                            <a href="{{ path('upload_taxref') }}">
                                <div class="panel-footer">
                                    <span class="pull-left">Mettre à Jour</span>
                                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                    <div class="clearfix"></div>
                                </div>
                            </a>
                        </div>
                    </div>
                {% endif %}
            </div>

            <!-- /.row Nouvel vue
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><i class="fa fa-re fa-fw"></i> Liste Observations</h3>
                        </div>
                        <div class="panel-body">
                            <div id="morris-area-chart"></div>
                        </div>
                    </div>
                </div>
            </div>-->
        <!-- /.container-fluid -->
        </div>
        <!-- ./End Vue Panel Dashboard -->

        {% endblock %}
{% endblock %}

